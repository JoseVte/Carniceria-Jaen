<div id="plantilla_detalles">
    <div style="text-align: justify" class="center-block">
        <div class="col-xs-3">
            {{> img_detalles}}
        </div>
        <div class="col-xs-3">
            <b>{{nombre}}</b><br>
            {{descripcion}}<br>
            {{precioKg}}<br>
            {{stock}}<br>
            {{rebaja}}<br>

            <em>{{fecha_js}}</em><br>

            <a href="javascript:add_prod_carrito({{id}})">Add</a>
        </div>
    </div>
</div>