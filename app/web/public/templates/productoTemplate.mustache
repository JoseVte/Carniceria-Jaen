<div id="plantilla_ofertas">
    <main class="container">
        {{#.}}
            <div id="prod_oferta_{{id}}" class="col-sm-2" align="center">
                <img src="{{url_imagen}}" height="128px" width="128px" class="img-responsive"><br>
                <b>{{nombre}}</b><br>
                <em>{{rebaja}} %</em><br>
                <a href="javascript:get_producto_detalles({{id}})">Detalles</a>
            </div>
        {{/.}}
    </main>
</div>

<!-- TODO Arreglar el total-->
