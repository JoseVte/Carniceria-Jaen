<div id="plantilla_ofertas">
    <main class="container">
        <div class="scroll_horizontal">
            <table>
                <tr>
                <!--{{#.}}-->
                    <td id="prod_oferta_{{id}}" align="center" style="padding-left: 10px; padding-right: 10px">
                        {{> img_ofertas}}<br>
                        <b>{{nombre}}</b><br>
                        <em>{{rebaja}} %</em><br>
                        <a href="javascript:get_producto_detalles({{id}})">Detalles</a>
                    </td>
                        <!--{{/.}}-->
                </tr>
            </table>
        </div>
    </main>
</div>
<!-- TODO Arreglar el total-->
<div id="plantilla_paginacion">
    <main class="container">
        <span class="badge">{{total}}</span>
        {{#contenido}}
            <div id="prod_{{id}}" class="col-sm-2" align="center">
                {{> img_pag}}<br>
                <b>{{nombre}}</b><br>
                <a href="javascript:get_producto_detalles({{id}})">Detalles</a>
            </div>
        {{/contenido}}
    </main>
    <!-- TODO AÃ±adir los links a anterior y posterior (usar bootstrap)-->
    <a href="{{link.href}}">Actual</a>
</div>

